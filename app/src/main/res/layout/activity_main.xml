<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F2FF">



    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#3F2B96"
        android:paddingBottom="8dp" />



    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Affirmation"
        android:textSize="16sp"
        android:textColor="#6A5ACD"
        android:paddingBottom="12dp" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvAffirmation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tap NEW to begin âœ¨"
            android:textSize="20sp"
            android:textColor="#1E1B2E"
            android:padding="20dp"
            android:gravity="center" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4B3F72"
        android:textStyle="bold"
        android:paddingBottom="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEW"
            android:backgroundTint="#5E4DB2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp" />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE (Remember this)"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp" />


        <Button
            android:id="@+id/btnCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COPY"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp" />


        <Button
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:backgroundTint="#6A1B9A"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp" />

    </LinearLayout>

</LinearLayout>
